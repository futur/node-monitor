/* Application configuration (default). */
{
  "app": {
    "poll": 300, /* 5 minute poll default. */
    "output": {
      "file": {
        "status": true,
        "files": [
          /* This is defaulted to a relative path. It an be absolute, e.g /var/log/node-monitor/log . */
          "log/node-monitor.log" 
        ],
        "cassandra": {
          "status": true
        },
        "hdfs": {
          "status": true
        },
        "mongo": {
          "status": true
        },
        "redis": {
          "status": true
        },
        "solr": {
          "status": true
        },
        "websocket": {
          "status": true
        }
      }
    },
    "email": false,
    "sms": false,
    "webservice": false
  },
  /* Handle alerts locally or with a service. */
  "alerts": {
    "cloudwatch": {
      "status": false,
      "namepsace": "<NAMESPACE>"
    },
    /* Rule strings are interpreted via eval if statements. */
    "rules": [
      {
        "1": {
          "event": "plugins:df",
          "rule": "disk is /dev/disk0s2 and size > 60",
          "actions": {
            "email": [
            ],
            "sms": [
            ],
            "webservice": {
            }
          }
        }
      }
    ]
  },
  "plugins": {
    "cpu": {
      "poll": 10
    },
    /* Disk space percentage. */
    "df": {
      "poll": 10,
      "disks": [
        "/dev/disk0s2"
      ]
    },
    "filesize": {
      "poll": 10,
      "files": [
        [
          "/Users/franklovecchio/Desktop/log", 20 /* mb */
        ]
      ]
    },
    "load": {
      "poll": 10
    },
    "memory": {
      "poll": 10
    },
    /* Log file tailer. */
    "tail": {
      "poll": "no",
      "files": [ 
        "/Users/franklovecchio/Desktop/log"
      ]
    },
    "uptime": {
      "poll": 10
    }
  },
  "crendetials": {
    "aws": {
      "secret": "<SECRET>",
      "key": "<KEY>"
    },
    "gmail": {
      "username": "<USERNAME>",
      "password": "<PASSWORD>"
    },
    "twilio": {
      "sid": "<SID>",
      "token": "<TOKEN>"
    }
  }
}